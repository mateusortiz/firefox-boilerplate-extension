{
    "manifest_version": 2,
    "name": "Boilerplate Extension",
    "description": "My Firefox Extension",
    "version": "0.0",
    "applications": {
      "gecko": {
        "id": "boilerplate@mateusortiz.com",
        "strict_min_version": "47.0a1"
      }
    },
    "browser-action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon-48.png"
