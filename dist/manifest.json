{
  "manifest_version": 2,
  "name": "Boilerplate Extension",
  "description": "My Firefox Extension",
  "homepage_url": "https://github.com/user/repo",
  "version": "0.0",
  "applications": {
    "gecko": {
      "id": "email@domain.com",
      "strict_min_version": "0.0"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon-48.png"
  },
  "icons": {
    "16" : "images/icon-16.png",
    "48" : "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
